<odoo>
    <data>
        <record id="view_company_form_inherit_advance" model="ir.ui.view">
            <field name="name">res.company.form.advance</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']/group" position="inside">
                    <group string="Advance Accounts">
                        <field name="customer_advance_account_id"/>
                        <field name="vendor_advance_account_id"/>
                    </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>