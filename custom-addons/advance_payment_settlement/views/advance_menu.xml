<odoo>
    <data>
    <!-- Customer Advances Action -->
    <record id="action_customer_advances" model="ir.actions.act_window">
        <field name="name">Customer Advances</field>
        <field name="res_model">advance.payment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">
            [
                ('partner_type', '=', 'customer')
            ]
        </field>
        <field name="context">
            {
                'default_partner_type': 'customer'
            }
        </field>
    </record>

    <!-- Vendor Advances Action -->
    <record id="action_vendor_advances" model="ir.actions.act_window">
        <field name="name">Vendor Advances</field>
        <field name="res_model">advance.payment</field>
        <field name="view_mode">list,form</field>
        <field name="domain">
            [
                ('partner_type', '=', 'vendor')
            ]
        </field>
        <field name="context">
            {
                'default_partner_type': 'vendor'
            }
        </field>
    </record>

    <!-- Customer Advances Menu -->
    <menuitem
        id="menu_customer_advances"
        name="Advances"
        parent="account.menu_finance_receivables"
        action="action_customer_advances"
        sequence="30"/>

    <!-- Vendor Advances Menu -->
    <menuitem
        id="menu_vendor_advances"
        name="Advances"
        parent="account.menu_finance_payables"
        action="action_vendor_advances"
        sequence="30"/>

    </data>
</odoo>
