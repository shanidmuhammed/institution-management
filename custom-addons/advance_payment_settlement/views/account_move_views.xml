<odoo>
    <data>
        <record id="view_move_form_inherit_settle_advance" model="ir.ui.view">
            <field name="name">account.move.form.settle.advance</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">

                    <button name="action_open_advance_settlement_wizard"
                            type="object"
                            string="Settle Advance"
                            class="btn-primary"
                            invisible="
                                state != 'posted'
                                    or amount_residual &lt;= 0
                                or move_type not in ('out_invoice', 'in_invoice')
                            "/>

                </xpath>

            </field>
        </record>
    </data>
</odoo>