<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_advance_settlement_wizard" model="ir.ui.view">
        <field name="name">advance.settlement.wizard.form</field>
        <field name="model">advance.settlement.wizard</field>
        <field name="arch" type="xml">
            <form string="Settle Advance">
                <sheet>
                    <group>
                        <field name="invoice_id"/>
                        <field name="partner_id"/>
                    </group>

                    <!-- One2many field -->
                    <field name="line_ids">
                        <!-- THIS list is for advance.settlement.wizard.line -->
                        <list editable="bottom">
                            <field name="advance_id"/>
                            <field name="available_balance"/>
                            <field name="settle_amount"/>
                        </list>
                    </field>
                </sheet>

                <footer>
                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>

        </field>
    </record>

</odoo>
