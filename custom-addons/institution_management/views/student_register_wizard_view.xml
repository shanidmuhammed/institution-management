<odoo>
    <record id="view_student_register_wizard_form" model="ir.ui.view">
        <field name="name">student.register.wizard.form</field>
        <field name="model">student.register.wizard</field>
        <field name="arch" type="xml">
            <form string="Register Student">
                <group>
                    <field name="student_id" readonly="1"/>
                </group>
                <footer>
                    <button string="Confirm"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
