<odoo>
    <data>
        <record id="view_institution_course_form" model="ir.ui.view">
            <field name="name">institution_course_form</field>
            <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_students"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-users">
                            <div class="o_stat_info">
                                <field name="student_count" class="o_stat_value"/>
                                <span class="o_stat_text">Students</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" string="Course Title:"/>
                        <h1>
                            <field name="name" placeholder="e.g. Full Stack Web Development"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="fee"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="code" groups="base.group_system"/>
                        </group>
                        <group>
                            <label for="duration"/>
                            <div class="o_row">
                                <field name="duration" class="oe_inline"/>
                                <span>Months</span>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="category_ids" widget="many2many_tags"/>
                            <field name="batch_ids"/>
                        </group>
                        <group>
                            <field name="teacher_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
            </field>
        </record>

    </data>
</odoo>