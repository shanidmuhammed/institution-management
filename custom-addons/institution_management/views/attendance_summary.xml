<odoo>
    <data>
        <record id="view_attendance_analysis_pivot" model="ir.ui.view">
            <field name="name">institution.attendance.line.pivot</field>
            <field name="model">institution.attendance.line</field>
            <field name="arch" type="xml">
                <pivot string="Attendance Analysis" disable_linking="True">
                    <field name="student_id" type="row"/>

                    <field name="date" interval="day" type="col"/>

                    </pivot>
            </field>
        </record>

        <record id="view_attendance_analysis_search" model="ir.ui.view">
            <field name="name">institution.attendance.line.search</field>
            <field name="model">institution.attendance.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="student_id"/>
                    <field name="batch_id"/>
                    <filter string="Present" name="filter_present" domain="[('is_present', '=', True)]"/>
                    <filter string="Absent" name="filter_absent" domain="[('is_present', '=', False)]"/>
                    <group expand="1" string="Group By">
                        <filter string="Batch" name="group_by_batch" context="{'group_by':'batch_id'}"/>
                        <filter string="Student" name="group_by_student" context="{'group_by':'student_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>