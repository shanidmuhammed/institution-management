<odoo>
    <data>
        <record id="view_attendance_form" model="ir.ui.view">
            <field name="name">institution.attendance.form</field>
            <field name="model">institution.attendance</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="batch_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Students">
                                <field name="line_ids">
                                    <list editable="bottom" create="0" delete="0">
                                        <field name="student_id"/>
                                        <field name="is_present"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_attendance_list" model="ir.ui.view">
            <field name="name">institution.attendance.list</field>
            <field name="model">institution.attendance</field>
            <field name="arch" type="xml">
                <list>
                    <field name="date"/>
                    <field name="batch_id"/>
                </list>
            </field>
        </record>

    </data>
</odoo>