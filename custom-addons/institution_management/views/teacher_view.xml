<odoo>
    <data>
        <record id="view_institution_teacher_form" model="ir.ui.view">
            <field name="name">institution_teacher_form</field>
            <field name="model">institution.teacher</field>
            <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Teacher Name:"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="subject"/>
                        </group>
                        <group>
                            <field name="phone"/>
                        </group>
                    </group>
                    <group>
                        <field name="course_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
            </field>
        </record>

    </data>
</odoo>