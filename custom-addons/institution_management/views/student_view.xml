<odoo>
    <data>
        <record id="view_institution_student_form" model="ir.ui.view">
            <field name="name">institution_student_form</field>
            <field name="model">institution.student</field>
            <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_register_wizard"
                        string="Register Student"
                        type="object"
                        class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Student Name:"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="gender"/>
                        </group>
                        <group>
                            <field name="dob"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="guardian_name"/>
                        </group>
                        <group>
                            <field name="contact_number"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="place"/>
                        </group>
                        <group>
                            <field name="batch_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="age"/>
                        </group>
                    </group>
                    <group>
                        <field name="is_registered"/>
                    </group>
                </sheet>
            </form>
            </field>
        </record>

    </data>
</odoo>