<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="group_institution_teacher" model="res.groups">
            <field name="name">Teacher</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="rule_teacher_see_course_students" model="ir.rule">
                <field name="name">Teacher: See Students in My Courses</field>
                <field name="model_id" ref="model_institution_student"/>

                <field name="domain_force">[('course_id.teacher_id.user_id', '=', user.id)]</field>
                <field name="groups" eval="[(4, ref('institution_management.group_institution_teacher'))]"/>
        </record>

        <record id="rule_student_see_student" model="ir.rule">
            <field name="name">Student: See own profile</field>
            <field name="model_id" ref="model_institution_student"/>

            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('institution_management.group_institution_student'))]"/>
        </record>

        <record id="group_institution_student" model="res.groups">
            <field name="name">Student</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

    </data>
</odoo>