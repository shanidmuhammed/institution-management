<odoo>
    <data>
        <record id="view_account_move_invoice_inherited" model="ir.ui.view">
            <field name="name">account.move.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                        <field name="customer_reference"/>
                </xpath>

                <xpath expr="//field[@name='customer_reference']" position="after">
                        <field name="approver_id"/>
                </xpath>
                <xpath expr="//field[@name='approver_id']" position="after">
                    <field name="approvers" widget="many2many_tags"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="Extra Charges">
                        <field name="extra_charge_ids">
                            <list editable="bottom">
                                <field name="name"/>
                                <field name="amount"/>
                            </list>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>